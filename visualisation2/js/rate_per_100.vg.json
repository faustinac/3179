{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Crime by Local Government Area (2012-2022)",
  "width": 500,
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2012,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "zoom_level",
      "value": 20000,
      "bind": {
        "input": "range",
        "min": 3500,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [145, -37.95],
      "bind": {
        "input": "select",
        "options": [
          [145, -37.95],
          [144.3, -38.1],
          [144.9, -36.7],
          [147.1, -38.1]
        ],
        "labels": ["Melbourne CBD", "Geelong", "Bendigo", "Sale"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/faustinac/3179/main/vic_lga.topojson",
        "format": {"type": "topojson", "feature": "vic_lga"}
      },
            "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.ABB_NAME",
          "as": "note"
        }
      ],

      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/faustinac/3179/main/crime_rates2.csv"
      },
      "transform": [
        {
          "lookup": "Local Government Area",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/faustinac/3179/main/vic_lga.topojson",
              "format": {
                "type": "topojson",
                "feature": "vic_lga"
              }
            },
            "key": "properties.ABB_NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Criminal Incident Rate",
          "type": "quantitative",
          "scale": {"domain": [1000, 25000], "scheme": "reds"},
          "legend": {"format": ".2s"}
        },
        "tooltip": [
          {"field": "Local Government Area", "type": "nominal", "title": "Local Government Area (LGA)"},
          {
            "field": "Criminal Incident Rate",
            "type": "quantitative",
            "title": "Rate per 100,000 population"
          },
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ],
  "config": {}
}
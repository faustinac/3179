{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Harm caused by crime by location in 2022",
    "data": {"url": "https://raw.githubusercontent.com/faustinac/3179/main/harm.csv"},
    "transform": [
        {"filter": "datum.Year == 2022"}
    ],
    "mark": "bar",
    "encoding": {
        "column": {"field": "Police Region"},
      "x": {"aggregate": "sum", "field": "Victim Reports", "type": "quantitative"},
      "y": {"field": "Local Government Area", "type": "nominal"},
      "color": {"field": "Harm Caused Flag", "type": "ordinal", "sort": "descending"}
    }
  }